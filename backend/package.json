{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "mocha 'test/**/*.ts'",
    "prebuild": "rimraf ./dist",
    "build": "npx tsc",
    "prestart": "npm run build",
    "start": "node ./dist/app.js",
    "predev": "npm run migrate",
    "dev": "nodemon ./src/app.ts",
    "migrate": "npm run typeorm migration:run -- -d ./src/dataSource.ts",
    "lint": "eslint .",
    "typeorm": "typeorm-ts-node-esm",
    "prettier": "prettier"
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js",
      "cjs",
      "mjs",
      "ts"
    ],
    "package": "./package.json",
    "reporter": "spec",
    "loader": "ts-node/esm",
    "slow": "75",
    "timeout": "15000",
    "ui": "bdd",
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "express-validator": "^6.14.0",
    "http-errors": "~1.6.3",
    "http-status-codes": "^2.2.0",
    "jade": "^0.29.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "morgan": "~1.9.1",
    "mysql2": "^2.3.3",
    "pdf-creator-node": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
